CheckHostIP no
ControlPath ~/.ssh/socket-%r@%h:%p
ControlMaster auto
ControlPersist 10m
#This makes sure it asks on the right terminal. Requires GPG_TTY
Match host * exec "gpg-connect-agent updatestartuptty /bye"

Include conf.d/*

Host danctnix alarm alarmpi
    User alarm
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null

Host openwrt
    User root
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null

Match host iau exec "! ping -c 1 -t 1 -W 1 %n >/dev/null 2>&1"
    HostName milh.nl
    Port 2203
Host iau

Match host suen exec "! ping -c 1 -t 1 -W 1 %n >/dev/null 2>&1"
    HostName dehouse.milh.nl
    Port 42069
Host suen
